    <Window.Resources>
        <!--<ResourceDictionary x:Key="FadeBrush">

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                <local:PtoI x:Key="p2i"/>
                </ResourceDictionary>
                <ResourceDictionary Source="test.xaml" />

